{
	"name": "bauhaus",
	"version": "3.26.5",
	"description": "Web application for the management of concepts, classifications and other statistical objects",
	"repository": {
		"type": "git",
		"url": "https://github.com/InseeFr/Bauhaus"
	},
	"license": "MIT",
	"author": "INSEE (http://www.insee.fr)",
	"private": true,
	"scripts": {
		"pre-script": "cross-env NODE_OPTIONS=--openssl-legacy-provider VITE_VERSION=$(node ./scripts/getVersion.js) VITE_NAME=$npm_package_name",
		"lint": "npx eslint src",
		"test": "vitest",
		"test:coverage": "cross-env CI=true vitest run --coverage",
		"start": "npm run pre-script vite",
		"build": "npm run pre-script cross-env VITE_INSEE=true vite build&& npm run create-zip",
		"create-zip": "cd build && bestzip build.zip *",
		"pre-push": "npm run lint && npm run test:coverage",
		"generate-entrypoint": "node scripts/generate-entrypoint.js",
		"prepare": "husky",
		"postinstall": "patch-package"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"resolutions": {
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-router-dom": "5.2.0",
		"underscore": "1.13.6",
		"@babel/traverse": "7.24.1",
		"immer": "9.0.21",
		"ejs": "3.1.9",
		"loader-utils": "2.0.4",
		"shell-quote": "1.8.1",
		"typescript": "5.5.3"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/react": "^16.0.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/dompurify": "^3.0.5",
		"@types/file-saver": "^2.0.7",
		"@types/jest": "^29.5.12",
		"@types/react-router-dom": "^5.3.3",
		"@types/react-select": "^5.0.1",
		"@types/react-sortable-tree": "^0.3.23",
		"@typescript-eslint/parser": "^7.15.0",
		"@vitejs/plugin-react": "^4.3.1",
		"@vitest/coverage-istanbul": "^2.0.5",
		"@vitest/coverage-v8": "^2.0.5",
		"bestzip": "^2.2.1",
		"cross-env": "^7.0.3",
		"esbuild-plugin-react-virtualized": "^1.0.4",
		"husky": "^9.0.11",
		"jsdom": "^25.0.0",
		"patch-package": "^8.0.0",
		"prettier": "^2.8.0",
		"react-app-polyfill": "^3.0.0",
		"vite": "^5.4.4",
		"vitest": "^2.0.5"
	},
	"dependencies": {
		"@inseefr/wilco": "0.0.7",
		"@sentry/react": "^7.59.3",
		"@tanstack/react-query": "^5.51.1",
		"@types/react-dom": "^18.3.0",
		"bootstrap": "3.4.1",
		"create-react-class": "^15.6.3",
		"dayjs": "^1.11.6",
		"dompurify": "2.2.9",
		"draft-js": "0.11.7",
		"draft-js-export-html": "1.4.1",
		"draft-js-import-html": "1.2.1",
		"draftjs-md-converter": "1.5.2",
		"events": "^3.3.0",
		"file-saver": "1.3.3",
		"jwt-decode": "^3.1.2",
		"keycloak": "1.2.0",
		"react": "18.3.1",
		"react-16-bootstrap-date-picker": "5.1.2",
		"react-bootstrap": "0.31.5",
		"react-bootstrap-table2-toolkit": "2.1.1",
		"react-dom": "18.3.1",
		"react-draft-wysiwyg": "1.15.0",
		"react-dropzone": "11.0.1",
		"react-hook-form": "^7.34.2",
		"react-modal": "^3.14.4",
		"react-redux": "^7.2.6",
		"react-router-dom": "5.2.0",
		"react-select": "1.1.0",
		"react-sliding-side-panel": "1.1.8",
		"react-sortable-tree": "2.1.0",
		"redux": "^4.2.0",
		"redux-thunk": "^2.4.2",
		"zod": "^3.22.4"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		],
		"rules": {
			"@typescript-eslint/no-unused-vars": "error",
			"jest-dom/prefer-to-have-attribute": "off",
			"jest/valid-title": "off",
			"testing-library/no-container": "off",
			"testing-library/no-node-access": "off",
			"testing-library/no-unnecessary-act": "off",
			"testing-library/no-wait-for-multiple-assertions": "off",
			"testing-library/prefer-screen-queries": "off"
		}
	}
}
